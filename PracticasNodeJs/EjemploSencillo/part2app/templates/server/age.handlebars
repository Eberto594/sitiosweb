<div class="container">
    <div class="col-lg-10">
        <div class="row">
            <div class="col-lg-12">
                <form id="age_form" action="/form" method="post">
                    <div class="row">
                        <div class=" col-lg-6" >
                            <label class="form-label">Nombre</label>
                            <input name="name" class="form-control" value="{{name}}"/>
                            <div class="text-danger" id="err_name_required" style="{{ pass validation 'name' 'required' }}">
                                Escribe tu nombre
                            </div>
                            <div class="text-danger" id="err_name_minLength" style="{{ pass validation 'name' 'minLength' }}">
                                Al menos 3 caracteres
                            </div>
                            
                        </div>

                        <div class=" col-lg-6">
                            <label class="form-label">Edad</label>
                            <input name="age" class="form-control" value="{{age}}" />
                            <div class="text-danger" id="err_age_isInteger" style="{{ pass validation 'age' 'isInteger' }}">
                                Escribe tu edad completa
                            </div>
                        </div>

                        {{!-- <div class="col-lg-6">
                            <label class="form-label">Telefono</label>
                            <input name="telefono" class="form-control" value="{{phone}}" />
