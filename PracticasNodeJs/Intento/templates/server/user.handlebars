<div class="container">
    <div class="col-lg-6">
        <form class="m-2">
            <div style="max-height: 600px; overflow-y: auto;">
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Nivel</th>
                            <th>Area</th>
                            <th>Creditos</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#unless data}}
                        <tr>
                            <td colspan="5">No Data</td>
                        </tr>
                        {{/unless}}
                        {{#each data}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.nombre}}</td>
                            <td>{{this.nivel}}</td>
                            <td>{{this.area}}</td>
                            <td>{{this.creditos}}</td>
                            <td>
                                <button class="btn btn-primary btn-sm" formmethod="post" formaction="/form/delete/{{this.id}}">Delete</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>


            <button class="btn btn-primary" formmethod="post" formaction="/form/add">Add</button>
            <input type="hidden" name="name" value="Alice">
            <input type="hidden" name="age" value="40">
            <input type="hidden" name="years" value="10">
        </form>
        {{!-- <img src="/images/mantenimiento.gif" alt="Servicio en mantenimiento"> --}}
    </div>

    <div class="col-lg-6">
        {{user.username}}
    </div>
</div>